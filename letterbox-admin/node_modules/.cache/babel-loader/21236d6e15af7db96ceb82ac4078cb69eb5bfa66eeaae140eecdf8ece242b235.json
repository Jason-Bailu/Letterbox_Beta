{"ast":null,"code":"export default {\n  name: \"WritingView\",\n  data() {\n    return {\n      form: {},\n      active: 0\n    };\n  },\n  methods: {\n    next() {\n      if (this.active++ > 2) this.active = 0;\n    }\n  }\n};","map":{"version":3,"names":["name","data","form","active","methods","next"],"sources":["src/views/shopview/WritingView.vue"],"sourcesContent":["<template>\n    <div>\n        <el-form ref=\"form\" :model=\"form\" label-width=\"100px\">\n            <div v-if=\"active===0\">\n                <el-form-item>\n                    <el-input type=\"textarea\" rows=\"2\" placeholder=\"请输入内容\" v-model=\"form.textarea\"></el-input>\n                </el-form-item>\n            </div>\n            <div v-else-if=\"active===1\">\n                <el-form-item label=\"收件方\">\n                    <el-input v-model=\"form.receiver\"></el-input>\n                </el-form-item>\n                <el-form-item label=\"收件电话\">\n                    <el-input v-model=\"form.receiverPhone\"></el-input>\n                </el-form-item>\n                <el-form-item label=\"目的地址\">\n                    <el-input v-model=\"form.toAddress\"></el-input>\n                </el-form-item>\n                <el-form-item label=\"邮编\">\n                    <el-input v-model=\"form.postalCode\"></el-input>\n                </el-form-item>\n            </div>\n            <div v-else-if=\"active===2\">\n                <el-form-item label=\"活动区域\">\n                    <el-select v-model=\"form.region\" placeholder=\"请选择活动区域\">\n                    <el-option label=\"区域一\" value=\"shanghai\"></el-option>\n                    <el-option label=\"区域二\" value=\"beijing\"></el-option>\n                    </el-select>\n                </el-form-item>\n                <el-form-item label=\"特殊资源\">\n                    <el-radio-group v-model=\"form.resource\">\n                        <el-radio label=\"线上品牌商赞助\"></el-radio>\n                        <el-radio label=\"线下场地免费\"></el-radio>\n                    </el-radio-group>\n                </el-form-item>\n            </div>\n        </el-form>\n        <div style=\"margin-top: 20px;\">\n            <el-steps space=\"100%\" :active=\"active\" finish-status=\"success\" align-center>\n            <el-step title=\"步骤 1\" icon=\"el-icon-edit\"></el-step>\n            <el-step title=\"步骤 2\" icon=\"el-icon-picture\"></el-step>\n            <el-step title=\"步骤 3\" icon=\"el-icon-upload\"></el-step>\n            </el-steps>\n            <div v-if=\"this.active === 3\">\n                <el-button style=\"margin-top: 12px;\" @click=\"next\">重置</el-button>\n                <el-button style=\"margin-top: 12px;\" @click=\"next\">完成</el-button>\n            </div>\n            <div v-else>\n                <el-button style=\"margin-top: 12px;\" @click=\"next\">下一步</el-button>\n            </div>\n        </div>\n    </div>\n</template>\n\n<script>\nexport default {\n    name: \"WritingView\",\n    data() {\n        return {\n            form: {},\n            active: 0\n        }\n    },\n    methods: {\n        next() {\n            if (this.active++ > 2) this.active = 0;\n        }\n    }\n}\n</script>\n\n<style>\n\n</style>"],"mappings":"AAuDA;EACAA,IAAA;EACAC,KAAA;IACA;MACAC,IAAA;MACAC,MAAA;IACA;EACA;EACAC,OAAA;IACAC,KAAA;MACA,SAAAF,MAAA,aAAAA,MAAA;IACA;EACA;AACA"},"metadata":{},"sourceType":"module","externalDependencies":[]}